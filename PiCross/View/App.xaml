<Application x:Class="View.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:View"
             xmlns:windows="clr-namespace:View.Windows"
             xmlns:viewmodel ="clr-namespace:ViewModel;assembly=ViewModel">
    <Application.Resources>
        <DataTemplate DataType="{x:Type viewmodel:GameViewModel}">
            <windows:GameWindow/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewmodel:StartScreenViewModel}">
            <windows:StartScreen/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewmodel:LevelSelectViewModel}">
            <windows:LevelSelectScreen/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewmodel:HighScoreViewModel}">
            <windows:HighScoreScreen/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewmodel:OptionsViewModel}">
            <windows:OptionsScreen/>
        </DataTemplate>
    </Application.Resources>
</Application>